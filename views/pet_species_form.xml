<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_form_pet_species" model="ir.ui.view">
        <field name="name">pet.species.form</field>
        <field name="model">pet.species</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title mb24">
                        <h1>
                            <field class="text-break" name="name" default_focus="1"
                                   placeholder="e.g. Cat"/>
                        </h1>
                    </div>
                    <notebook>
                        <page id="breed_tab"
                              name="breed_tab"
                              string="Breed">
                            <field name="breed_ids"
                                   widget="section_and_note_one2many"
                                   mode="tree,kanban">
                                <tree editable="bottom" string="Breed">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
