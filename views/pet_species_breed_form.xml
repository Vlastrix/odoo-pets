<odoo>
    <record id="view_form_pet_species_breed" model="ir.ui.view">
        <field name="name">pet.species.breed.form</field>
        <field name="model">pet.species.breed</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title mb24">
                        <h1>
                            <field class="text-break" name="name" default_focus="1"
                                   placeholder="e.g. Bulldog"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="species_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
