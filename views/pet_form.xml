<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_form_pet" model="ir.ui.view">
        <field name="name">pet.pet.form</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <field name="profile_pic" widget="image" class="oe_avatar"
                           options="{'preview_image': 'profile_pic'}"/>
                    <div class="oe_title mb24">
                        <h1>
                            <field class="text-break" name="name" default_focus="1"
                                   placeholder="e.g. Abby"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="species_id" required="True"/>
                            <field name="breed_id" domain="[('species_id','=',species_id)]"/>
                            <field name="work_location_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="birth_date"/>
                            <field name="age"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" colspan="4" nolabel="1"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
